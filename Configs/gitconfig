[user]
  name = Julien Chaffraix
  email = julien.chaffraix@gmail.com
[commit]
	verbose = true
	gpgsign = true
[color]
  ui = 1
[init]
	defaultBranch = main
[help]
	autocorrect = prompt
[pull]
	rebase = true
[push]
  default = simple
[pager]
  branch = false
[branch]
  sort = -committerdate
[alias]
  p = push
  fp = push --force-with-lease
  rs = reset
  rbc = rebase --continue
  rba = rebase --abort
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
